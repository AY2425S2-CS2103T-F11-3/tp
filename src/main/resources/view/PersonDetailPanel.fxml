<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>


<?import javafx.geometry.Insets?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="8">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label fx:id="name" styleClass="header"/>
        <HBox spacing="4" fx:id="tagsContainer"/>

        <Label fx:id="phone"/>
        <Label fx:id="address"/>
        <Label fx:id="email"/>
        <Label fx:id="appointment" styleClass="cell_small_label" text="appointment" />
        <VBox fx:id="emergencyContactBox" styleClass="cell_small_label">
        <Label text="Emergency Contact:" styleClass="cell_small_label" />
        <Label fx:id="emergencyName" styleClass="cell_small_label" />
        <Label fx:id="emergencyPhone" styleClass="cell_small_label" />
        </VBox>
    </VBox>
</AnchorPane>
